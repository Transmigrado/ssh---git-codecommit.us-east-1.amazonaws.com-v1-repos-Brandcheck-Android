<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asteroid.megatime.infolder.activities.SignupSuccessActivity"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/orange_first"
                android:minHeight="100dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/success_alert_background"
                    android:src="@mipmap/home_background2"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/success_alert_logo"
                    android:layout_alignParentTop="false"
                    android:src="@mipmap/brandcheck_logo"
                    tools:ignore="ContentDescription"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El mensaje ha sido enviado exitosamente, un ejecutivo se contactarÃ¡ con usted a la brevedad."
                android:id="@+id/success_alert_text"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:id="@+id/ok_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:focusableInTouchMode="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/orange_first"
                    android:background="@drawable/rounded_white" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
